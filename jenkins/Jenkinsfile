pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            environment {
                GOCACHE = "/tmp/go-cache"
                GOMODCACHE = "/go-mod"
            }
            steps {
                dir('bugtracker-backend') {
                    sh 'mkdir -p $GOCACHE'
                    sh 'chmod -R 777 $GOCACHE $GOMODCACHE'
                    sh 'go mod download'
                    sh 'go test -v ./...'
                }
            }
        }
    }
}